  # Example: echo -n "0x1234..." | base64

  POLYGON_PRIVATE_KEY: "eW91cl9wcml2YXRlX2tleV9oZXJl"  # your_private_key_here (base64)
  POLYGON_ADDRESS: "eW91cl93YWxsZXRfYWRkcmVzc19oZXJl"  # your_wallet_address_here (base64)
  POLYMARKET_API_KEY: ""  # Optional (leave empty to auto-generate)
  POLYMARKET_PASSPHRASE: ""  # Optional (leave empty to auto-generate)
